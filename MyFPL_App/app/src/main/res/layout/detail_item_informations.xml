<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_item_information">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sl_cornerRadius="5dp"
        app:sl_dx="0dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="@color/box_Shadow"

        app:sl_shadowRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/white_5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pdt"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:fontFamily="@font/lexend_medium"
                    android:paddingBottom="3dp"
                    android:textSize="14sp"
                    android:layout_gravity="bottom"
                    android:text="Phòng đào tạo"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/img_bg_line"

                android:paddingRight="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/custom_tv_nameinformations"
                    android:paddingTop="7dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="0dp"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/lexend"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="Thông báo đăng ký thực hiện dự án tốt nghiệp học kỳ Fall 2023"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center|left">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_bg_clock"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_light"
                    android:textSize="14sp"
                    android:textColor="@color/grey_primary"
                    android:text="9:00pm"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_bg_author"/>
                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/lexend_light"
                    android:textSize="14sp"
                    android:textColor="@color/grey_primary"
                    android:text="Nguyễn Đức Tuân"/>
            </LinearLayout>

        </LinearLayout>
    </com.dd.ShadowLayout>




</LinearLayout>