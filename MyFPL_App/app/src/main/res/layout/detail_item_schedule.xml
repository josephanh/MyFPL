<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.7"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_extrabold"
                android:textSize="22sp"
                android:textColor="@color/black"

                android:text="01"/>
            <TextView
                android:id="@+id/tv_time_start"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:textSize="14sp"
                android:text="7:30"/>
            <TextView
                android:id="@+id/tv_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/lexend"
                android:textColor="@color/grey_light"
                android:text="9:30"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_lines"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_vertical_line"
            />
        <com.dd.ShadowLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="8.3"
            app:sl_cornerRadius="5dp"
            app:sl_dx="2dp"
            app:sl_dy="2dp"
            app:sl_shadowColor="@color/box_Shadow"
            app:sl_shadowRadius="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_5dp"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="match_parent"
                    android:textColor="@color/purple"
                    android:text="Android Networking"
                    android:textSize="16sp"
                    android:fontFamily="@font/lexend_medium"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center|left">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_bg_location"/>
                    <TextView
                        android:id="@+id/tv_room"
                        android:text="T308"
                        android:fontFamily="@font/lexend_light"
                        android:textColor="@color/grey_black"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_bg_user_schedule"/>
                    <TextView
                        android:id="@+id/tv_teacher"
                        android:text="Thầy Chấn"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/lexend_light"
                        android:textColor="@color/grey_black"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.dd.ShadowLayout>


    </LinearLayout>

</LinearLayout>